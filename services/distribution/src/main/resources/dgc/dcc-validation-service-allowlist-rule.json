{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "dcc-validation-service-allowlist-rule.json",
  "title": "CWA DCC Validation Service Allowlist",
  "description": "CWA DCC Validation Service Allowlist",
  "required": [
    "certificates"
  ],
  "type": "object",
  "properties": {
    "certificates": {
      "description": "",
      "type": "array",
      "items": {
        "required": [
          "serviceProvider",
          "hostname",
          "fingerprint256",
          "serviceProviderAllowlistEndpoint"
        ],
        "type": "object",
        "properties": {
          "serviceProvider": {
            "type": "string",
            "minLength": 1
          },
          "hostname": {
            "type": "string",
            "minLength": 1
          },
          "fingerprint256": {
            "type": "string",
            "minLength": 1,
            "pattern": "^[0-9a-fA-F]{64}$"
          },
          "serviceProviderAllowlistEndpoint": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    }
  }
}
