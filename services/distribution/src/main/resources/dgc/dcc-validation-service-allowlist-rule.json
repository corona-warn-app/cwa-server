{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "dcc-validation-service-allowlist-rule.json",
  "title": "CWA DCC Validation Service Allowlist",
  "description": "CWA DCC Validation Service Allowlist",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "certificates"
  ],
  "properties": {
    "certificates": {
      "type": "array",
      "description": "Array of certificates",
      "items": {
        "type": "object",
        "required": [
          "serviceProvider",
          "hostname",
          "fingerprint256"
        ],
        "properties": {
          "serviceProvider": {
            "type": "string",
            "description": "The name of the service provider",
            "minLength": 1
          },
          "hostname": {
            "type": "string",
            "description": "Type url of the service provider",
            "pattern": "(www.)?[a-zA-Z0-9@:%._\\+~#?&//=]{2,256}\\.[a-z]{2,6}\\b([-a-zA-Z0-9@:%._\\+~#?&//=]*)",
            "minLength": 1
          },
          "fingerprint256": {
            "type": "string",
            "description": "Fingerprint of the certificate",
            "pattern": "^[0-9a-fA-F]{64}$"
          }
        }
      }
    }
  }
}
